@model ObjectType
@{
    Layout = "_ModalDialogForm";
}

<!--编辑基础类型表单-->
<form action="javascript:void(0);" onsubmit="save_object_type(this);">
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">类型分类</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="CategoryName" value="@base.Model.Category.CategoryName" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">类型名称</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="TypeName" value="@base.Model.TypeName" required />
            <invalid-message>请输入类型名称</invalid-message>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">备注</label>
        <div class="col-md-9">
            <textarea class="form-control" name="Remark">@base.Model.Remark</textarea>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">排序时间</label>
        <div class="col-md-9">
            <input class="form-control" type="text" data-role="datetimepicker" name="SortedTime" value="@string.Format("{0:yyyy-MM-dd HH:mm:ss}", base.Model.SortedTime)" required />
            <invalid-message>请选择排序时间</invalid-message>
        </div>
    </div>
    <!--隐藏变量-->
    <input type="hidden" name="TypeId" value="@base.Model.TypeId" />
    <input type="hidden" name="CategoryCode" value="@base.Model.CategoryCode" />
</form>