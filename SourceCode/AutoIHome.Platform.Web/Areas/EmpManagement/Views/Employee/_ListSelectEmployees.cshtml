@model IPagedList<Employee>
@{
    string functionName = base.ViewBag.Function;
    string selectFunction = base.ViewBag.SelectFunction;
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>编号</th>
            <th>姓名</th>
            <th>性别</th>
            <th>年龄</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in base.Model)
        {
            <tr onclick="@($"{selectFunction}('{employee.EmployeeNo}', '{employee.EmployeeName}');")">
                <td>@employee.EmployeeNo</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.Sex</td>
                <td>@employee.Age</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">
                @await Html.PartialAsync("_Pagination", base.Model.GetPagination(functionName))
            </td>
        </tr>
    </tfoot>
</table>