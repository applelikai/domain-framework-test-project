@model Department
@{
    Layout = "_ModalContent";
}

<!--显示部门详情-->
<div class="row mb-3">
    <div class="col-md-6 row">
        <label class="col-md-4 col-form-label text-end">部门编号</label>
        <div class="col-md-8">
            <input class="form-control" type="text" name="DepartmentNo" value="@base.Model.DepartmentNo" readonly />
        </div>
    </div>
    <div class="col-md-6 row">
        <label class="col-md-4 col-form-label text-end">上级部门编号</label>
        <div class="col-md-8">
            <input class="form-control" type="text" name="ParentDepartmentNo" value="@base.Model.ParentDepartmentNo" readonly />
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col-md-6 row">
        <label class="col-md-4 col-form-label text-end">部门名称</label>
        <div class="col-md-8">
            <input class="form-control" type="text" name="DepartmentName" value="@base.Model.DepartmentName" readonly />
        </div>
    </div>
    <div class="col-md-6 row">
        <label class="col-md-4 col-form-label text-end">部门领导</label>
        <div class="col-md-8">
            <input class="form-control" type="text" name="DepartmentManager" value="@base.Model.DepartmentManager" readonly />
        </div>
    </div>
</div>
<div class="row mb-3 pe-md-4">
    <div class="col-md-12 row">
        <label class="col-md-2 col-form-label text-end">备注</label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="Remark" value="@base.Model.Remark" readonly />
        </div>
    </div>
</div>