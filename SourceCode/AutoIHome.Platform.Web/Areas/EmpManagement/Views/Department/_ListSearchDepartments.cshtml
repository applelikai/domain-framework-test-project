@model IPagedList<Department>
@{
    string function = base.ViewBag.Function;
}

<!--查询表单-->
<form class="container-fluid mb-2">
    <div class="row">
        <div class="col-md-5 row">
            <label class="col-md-4 col-form-label text-end">上级部门:</label>
            <div class="col-md-8">
                <input class="form-control" type="text" name="ParentName" />
            </div>
        </div>
        <div class="col-md-5 row">
            <label class="col-md-4 col-form-label text-end">部门名称:</label>
            <div class="col-md-8">
                <input class="form-control" type="text" name="DepartmentName" />
            </div>
        </div>
        <div class="col-md-2">
            <primary-button click="@($"{function}(1);")">
                <partial name="_ButtonTextSearch" />
            </primary-button>
        </div>
    </div>
</form>
<!--主体:分页显示部门列表-->
<main>
    @await Html.PartialAsync("_ListSelectDepartments", base.Model) 
</main>