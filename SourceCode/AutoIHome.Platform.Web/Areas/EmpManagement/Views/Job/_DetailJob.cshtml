@model Job
@{
    Layout = "_ModalDialog";
}

<!--职位详情-->
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">所属部门</label>
    <div class="col-md-9">
        <input class="form-control" type="text" value="@base.Model.Department.DepartmentName" readonly />
    </div>
</div>
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">职位名称</label>
    <div class="col-md-9">
        <input class="form-control" type="text" name="JobName" value="@base.Model.JobName" readonly />
    </div>
</div>
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">备注</label>
    <div class="col-md-9">
        <textarea class="form-control" name="Remark" readonly>@base.Model.Remark</textarea>
    </div>
</div>