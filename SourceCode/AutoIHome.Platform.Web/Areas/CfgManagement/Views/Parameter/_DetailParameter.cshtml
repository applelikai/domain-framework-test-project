@model Parameter
@{
    Layout = "_ModalDialog";
}

<!--显示参数详情-->
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">参数分类</label>
    <div class="col-md-9">
        <input class="form-control" type="text" name="CategoryName" value="@base.Model.Category.CategoryName" readonly />
    </div>
</div>
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">参数名称</label>
    <div class="col-md-9">
        <input class="form-control" type="text" name="ParameterName" value="@base.Model.ParameterName" readonly />
    </div>
</div>
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">参数值</label>
    <div class="col-md-9">
        <input class="form-control" type="text" name="ParameterValue" value="@base.Model.ParameterValue" readonly />
    </div>
</div>
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">备注</label>
    <div class="col-md-9">
        <textarea class="form-control" name="Remark" readonly>@base.Model.Remark</textarea>
    </div>
</div>
<div class="row mb-3">
    <label class="col-md-3 col-form-label text-end">排序时间</label>
    <div class="col-md-9">
        <input class="form-control" type="text" name="SortedTime" value="@string.Format("{0:yyyy-MM-dd HH:mm:ss}", base.Model.SortedTime)" readonly />
    </div>
</div>