@model Parameter
@{
    Layout = "_ModalDialogForm";
}

<!--编辑参数表单-->
<form action="javascript:void(0);" onsubmit="save_parameter(this);">
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">参数分类</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="CategoryName" value="@base.Model.Category.CategoryName" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">参数名称</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="ParameterName" value="@base.Model.ParameterName" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">参数值</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="ParameterValue" value="@base.Model.ParameterValue" required />
            <invalid-message>请输入参数值</invalid-message>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">备注</label>
        <div class="col-md-9">
            <textarea class="form-control" name="Remark">@base.Model.Remark</textarea>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">排序时间</label>
        <div class="col-md-9">
            <input class="form-control" type="text" data-role="datetimepicker" name="SortedTime" value="@string.Format("{0:yyyy-MM-dd HH:mm:ss}", base.Model.SortedTime)" required />
            <invalid-message>请选择排序时间</invalid-message>
        </div>
    </div>
    <!--隐藏变量-->
    <input type="hidden" name="CategoryId" value="@base.Model.CategoryId" />
</form>