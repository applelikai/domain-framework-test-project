@model ParameterCategory
@{
    Layout = "_ModalDialogForm";
}

<!--新建参数表单-->
<form action="javascript:void(0);" onsubmit="add_parameter(this);">
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">参数分类</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="CategoryName" value="@base.Model.CategoryName" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">参数名称</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="ParameterName" required />
            <invalid-message>请输入参数名称</invalid-message>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">参数值</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="ParameterValue" required />
            <invalid-message>请输入参数值</invalid-message>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">备注</label>
        <div class="col-md-9">
            <textarea class="form-control" name="Remark"></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-end">排序时间</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="SortedTime" placeholder="插入时的操作时间" readonly />
        </div>
    </div>
    <!--隐藏变量-->
    <input type="hidden" name="CategoryId" value="@base.Model.CategoryId" />
</form>