@model IPagedList<ProvinceLevel>
@{
    string functionName = base.ViewBag.Function;
    string selectFunction = base.ViewBag.SelectFunction;
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>行政区代码</th>
            <th>行政区简称</th>
            <th>行政区名称</th>
            <th>行政区类型</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var provinceLevel in base.Model)
        {
            <tr onclick="@($"{selectFunction}('{provinceLevel.ProvinceCode}', '{provinceLevel.ProvinceName}', '{provinceLevel.ProvinceType}');")">
                <td>@provinceLevel.ProvinceCode</td>
                <td>@provinceLevel.ShortName</td>
                <td>@provinceLevel.ProvinceName</td>
                <td>@provinceLevel.ProvinceType</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">
                @await Html.PartialAsync("_Pagination", base.Model.GetPagination(functionName))
            </td>
        </tr>
    </tfoot>
</table>