@model LoginUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>汽车平台登录</title>
        <!--样式-->
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/ext-bootstrap.css" />
        <link rel="stylesheet" href="~/css/ext-utils.css" />
        <link rel="stylesheet" href="~/css/page-login.css" />
    </head>
    <body>
        <form method="post">
            <div>
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h3 class="text-primary">
                            <i class="fa fa-car"></i> 平台管理
                        </h3>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <input class="form-control" type="text" name="UserName" placeholder="用户名" value="@base.Model.UserName" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <input class="form-control" type="password" name="Password" placeholder="密码" value="@base.Model.Password" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-10 row">
                        <primary-button type="submit">
                            <b>登&nbsp;&nbsp;录</b>
                        </primary-button>
                    </div>
                </div>
                <div class="row">
                    <span class="col-lg-12 text-center text-danger">@base.ViewData["ErrorMessage"]</span>
                </div>
            </div>
        </form>
    </body>
</html>
